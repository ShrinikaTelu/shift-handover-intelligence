# Example Environment Variables
# Copy this to .env and fill in your actual values
# NEVER commit .env to version control!

# Google Gemini API
# Get your free API key at: https://ai.google.dev
GOOGLE_API_KEY=your_gemini_api_key_here

# Gemini Model Version
# Current: gemini-3-flash-preview (latest)
GEMINI_MODEL=gemini-3-flash-preview

# Database URL
# SQLite (default): sqlite+aiosqlite:///./handovers.db
# PostgreSQL: postgresql+asyncpg://user:password@localhost/dbname
DATABASE_URL=sqlite+aiosqlite:///./handovers.db

# Application Environment
# Options: development, production
ENVIRONMENT=development

# Server Configuration (Backend)
API_HOST=127.0.0.1
API_PORT=8000

# Frontend Configuration
FRONTEND_URL=http://localhost:4200
FRONTEND_PORT=4200

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
